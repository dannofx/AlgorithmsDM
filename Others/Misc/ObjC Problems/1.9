#import "Solution.h"

@interface NSString(Rotation)
- (BOOL)isSubstring:(NSString *)other;
- (BOOL)isRotation:(NSString *)other;
@end

@implementation NSString(Rotation)

- (BOOL)isSubstring:(NSString *)other {
    return [self rangeOfString:other].location != NSNotFound;
}

- (BOOL)isRotation:(NSString *)other {
    if ([self length] == 0 || [self length] != [other length]) {
        return NO;
    }
    NSString * superString = [NSString stringWithFormat:@"%@%@", self, self];
    return [superString isSubstring:other];
}

@end

